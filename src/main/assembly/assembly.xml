<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
  <id>build</id>
  <formats>
    <format>dir</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${basedir}/src/resources</directory>
      <outputDirectory>config</outputDirectory>
      <includes>
        <include>settings.xml</include>
        <include>log4j2.yaml</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/src/resources/de/bayern/gdi/model</directory>
      <outputDirectory>config</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${basedir}/misc/scripts</directory>
      <outputDirectory>${file.separator}</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${basedir}/misc/textfiles</directory>
      <outputDirectory>${file.separator}</outputDirectory>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <includes>
        <include>de.bayern.gdi:downloadclient:jar</include>
      </includes>
      <outputFileNameMapping>${artifactId}.jar</outputFileNameMapping>
    </dependencySet>
  </dependencySets>
</assembly>
